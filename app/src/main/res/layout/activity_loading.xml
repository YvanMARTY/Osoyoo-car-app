<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white" >
    <!-- android:background="@drawable/bg" -->

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="313dp"
        android:layout_height="268dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:src="@drawable/web_hi_res_512" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dip"
        android:text="Based on Osoyoo official app"
        android:textColor="@android:color/black"
        android:textSize="15sp" />

        <TextView 
        android:id="@+id/kong"
        android:layout_width="wrap_content"
        android:layout_height="1dip" 
        android:layout_centerInParent="true"/>

    <Button
        android:id="@+id/but_wifi"
        android:layout_width="120dip"
        android:layout_height="60dip"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="172dp"
        android:background="@drawable/button_style"
        android:text="Mode Wifi"
        android:padding="8dp"
        android:textColor="#ffffff"
        android:textSize="18sp" />

    <Button
        android:id="@+id/but_blue"
        android:layout_width="120dip"
        android:layout_height="60dip"
        android:layout_alignBaseline="@+id/kong"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_style"
        android:text="Mode Bluetooth"
        android:padding="8dp"
        android:textColor="#ffffff"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="59dp"
        android:gravity="center"
        android:text="Developed by Yvan\nTested by Emile\nApproved by Kavirthan"
        android:textColor="@android:color/black"
        android:textSize="18dp" />

</RelativeLayout>