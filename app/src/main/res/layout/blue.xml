<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
    android:background="@android:color/white"
	android:orientation="vertical" >


    <LinearLayout
        android:id="@+id/LinearLayout03"
        android:layout_width="371dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dip"
        android:layout_marginTop="10dip"
        android:layout_marginRight="40dip"
        android:gravity="center">

        <Button
            android:id="@+id/b_con"
            android:layout_width="wrap_content"
            android:layout_height="50dip"
            android:layout_weight="1"
            android:background="@drawable/button_style"
            android:text="Connexion"
            android:textColor="#ffffff"
            android:textSize="15sp"></Button>

        <TextView
            android:layout_width="50dip"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/b_sz"
            android:layout_width="wrap_content"
            android:layout_height="50dip"
            android:layout_weight="1"
            android:background="@drawable/button_style"
            android:text="Modifier les paramètres"
            android:textColor="#ffffff"
            android:textSize="15sp"
			android:padding="8dp" />
    </LinearLayout>

    <LinearLayout android:id="@+id/LinearLayout01"
		android:layout_height="wrap_content"
		android:layout_width="fill_parent"
		android:layout_below="@id/LinearLayout03"
		android:layout_marginLeft="40dip"
		android:layout_marginRight="40dip"
		android:gravity="center">

        <Button
            android:id="@+id/b_bz"
            android:layout_width="wrap_content"
            android:layout_height="50dip"
            android:layout_weight="1"
            android:background="@drawable/button_style"
            android:text="Mode évitement d'obstacles"
            android:textColor="#ffffff"
            android:textSize="15sp"></Button>

		<TextView
			android:layout_width="50dip"
			android:layout_height="wrap_content"
			/>

		<Button
			android:id="@+id/b_xj"
			android:layout_width="157dp"
			android:layout_height="50dip"
			android:layout_weight="1"
			android:background="@drawable/button_style"
			android:text="Mode combat"
			android:textColor="#ffffff"
			android:textSize="15sp" />

	</LinearLayout>


	<TextView
		android:id="@+id/title"
		android:layout_width="match_parent"
		android:layout_height="12dip"
		android:textColor="#ffffff"
		android:gravity="center"
		android:textSize="10dip"
		android:layout_centerHorizontal="true"
		/>


	<Button
		android:id="@+id/b_desactiver_emetteur"
		android:layout_width="wrap_content"
		android:layout_height="50dip"
		android:layout_below="@+id/b_tir"
		android:layout_alignParentRight="true"
		android:layout_weight="1"
		android:background="@drawable/button_style"
		android:text="OFF"
		android:textColor="#ffffff"
		android:textSize="15sp" />

	<Button
		android:id="@+id/b_activer_emetteur"
		android:layout_width="wrap_content"
		android:layout_height="50dip"
		android:layout_above="@+id/b_desactiver_emetteur"
		android:layout_alignParentRight="true"
		android:layout_weight="1"
		android:background="@drawable/button_style"
		android:text="ON"
		android:textColor="#ffffff"
		android:textSize="15sp" />

    <Button
        android:id="@+id/b_tir"
        android:layout_width="wrap_content"
        android:layout_height="50dip"
        android:layout_below="@+id/scro"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="-15dip"
        android:layout_weight="1"
        android:background="@drawable/button_style"
        android:text="TIR"
        android:textColor="#ffffff"
        android:textSize="15sp" />

	<Button
		android:id="@+id/but_below"
		android:background="@drawable/back_style"
		android:layout_width="75dip"
		android:layout_height="75dip"
		android:layout_alignParentBottom="true"
		android:layout_centerHorizontal="true"
		android:layout_marginBottom="15dip"
		/>


	<Button
		android:id="@+id/but_stop"
		android:background="@drawable/stop_style"
		android:layout_width="75dip"
		android:layout_height="75dip"
		android:layout_above="@id/but_below"
		android:layout_centerHorizontal="true"
		/>


	<Button
		android:id="@+id/but_stop2"
		android:layout_width="75dip"
		android:layout_height="75dip"
		android:layout_above="@id/but_below"
		android:layout_centerHorizontal="true"
		android:background="@drawable/stop_style" />

	<Button
		android:id="@+id/but_up"
		android:background="@drawable/up_style"
		android:layout_width="75dip"
		android:layout_height="75dip"
		android:layout_above="@id/but_stop"
		android:layout_centerHorizontal="true"
		/>

	<Button
		android:id="@+id/but_right"
		android:layout_width="75dip"
		android:background="@drawable/right_style"
		android:layout_height="75dip"
		android:layout_above="@id/but_below"
		android:layout_toRightOf="@id/but_stop"
		/>

	<Button
		android:id="@+id/but_left"
		android:background="@drawable/left_style"
		android:layout_width="75dip"
		android:layout_height="75dip"
		android:layout_above="@id/but_below"
		android:layout_toLeftOf="@id/but_stop"
		/>


    <ScrollView
        android:id="@+id/scro"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/but_up"
        android:layout_below="@id/LinearLayout01"
        android:layout_marginTop="10dip"
        android:layout_marginBottom="15dip"
        android:background="@drawable/bg2"
        android:padding="10dp"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="18dp"
                android:textColor="@android:color/white"
                android:text="Historique des logs du robot :" />

            <TextView
                android:id="@+id/con_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:singleLine="false"
                android:textColor="#ffffff"
                android:padding="6dp"
                android:textSize="15sp" />

        </LinearLayout>
    </ScrollView>

	<ImageView
		android:id="@+id/imageView2"
		android:layout_width="77dp"
		android:layout_height="86dp"
		android:layout_alignParentBottom="true"
		android:layout_alignParentRight="true"
		android:src="@drawable/web_hi_res_512" />

    <Button
        android:id="@+id/b_init_score"
        android:layout_width="wrap_content"
        android:layout_height="50dip"
        android:layout_below="@+id/b_tir"
        android:layout_alignParentLeft="true"
        android:background="@drawable/button_style"
		android:padding="12dp"
        android:text="INIT. SCORE"
        android:textColor="@android:color/white" />

	<Button
		android:id="@+id/etat_emetteur"
		android:layout_width="19dp"
		android:layout_height="20dp"
		android:layout_alignParentLeft="true"
		android:layout_below="@+id/b_tir"
		android:layout_marginLeft="244dp"
		android:layout_marginTop="-26dp"
		android:background="@drawable/led_etat_emetteur"
		android:textColor="@android:color/white" />

	<Chronometer
		android:id="@+id/chronometre"
		android:layout_width="51dp"
		android:layout_height="22dp"
		android:layout_alignParentBottom="true"
		android:layout_alignStart="@+id/LinearLayout03"
		android:layout_marginBottom="24dp"
		android:textColor="@android:color/black"
		android:textSize="18dp" />

	<ImageView
		android:id="@+id/imageView3"
		android:layout_width="44dp"
		android:layout_height="38dp"
		android:layout_alignBottom="@+id/but_below"
		android:layout_alignParentStart="true"
		android:src="@drawable/chronometer" />

	<TextView
		android:id="@+id/emetteurs_etat"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentEnd="true"
		android:layout_alignTop="@+id/b_activer_emetteur"
		android:layout_marginEnd="96dp"
		android:text="Emetteurs"
		android:textColor="@android:color/black"
		android:textStyle="bold" />

</RelativeLayout>